
#include <iostream>

using namespace std;

int main()
{
	int input;
	
	cout<<"1 coke\n";
	cout<<"2 water\n";
	cout<<"3 sprite\n";
	cout<<"4 beer\n";
	cout<<"5 vodka\n";

	cout << "Please Select one of the above beverages: \n";
	cin >> input;
	switch (input) {
		case 1:
			cout<< "Here's your Coke";
			break;
		case 2:
			cout<< "Here's your Water";
			break;
		case 3:
			cout<< "Here' your Sprite";
			break;
		case 4:
			cout<< "Here's your Beer";
			break;
		case 5:
			cout<< "Here's your Vodka";
			break;	    
		default:
			cout << "Incorrect number, please rerun and input a number between 1 and 5."; 
			break;    
		}
		cin.get(); 	      	      

}

